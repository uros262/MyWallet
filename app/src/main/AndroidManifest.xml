<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wallet.my" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddIncome"
            android:label="@string/income" >
            <intent-filter>
                <action android:name="android.intent.action.ADD_INCOME" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddExpense"
            android:label="@string/expense" >
            <intent-filter>
                <action android:name="android.intent.action.ADD_EXPENSE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StatisticMain"
            android:label="@string/statistic" >
            <intent-filter>
                <action android:name="android.intent.action.STATISTIC_MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StatisticIncomes"
            android:label="@string/statistic" >
            <intent-filter>
                <action android:name="android.intent.action.STATISTIC_INCOMES" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StatisticExpenses"
            android:label="@string/statistic" >
            <intent-filter>
                <action android:name="android.intent.action.STATISTIC_EXPENSES" />
            </intent-filter>
        </activity>

    </application>

</manifest>
